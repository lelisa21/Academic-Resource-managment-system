<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.arms.gui.controllers.GradeController"
            stylesheets="@../css/dashboard.css">
    
    <top>
        <HBox styleClass="header" alignment="CENTER_LEFT" spacing="20">
            <padding><Insets top="10" right="20" bottom="10" left="20"/></padding>
            
            <Label text="Grade Management" styleClass="header-title"/>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Label fx:id="welcomeLabel" styleClass="welcome-label"/>
                <Button text="Back to Dashboard" onAction="#handleLogout" 
                       styleClass="logout-button"/>
            </HBox>
        </HBox>
    </top>
    
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <!-- Grades Tab -->
            <Tab text="My Grades">
                <VBox spacing="20">
                    <padding><Insets all="20"/></padding>
                    
                    <!-- Student Info -->
                    <HBox spacing="30" styleClass="info-section">
                        <VBox spacing="5">
                            <Label text="Student Information" styleClass="section-title"/>
                            <Label fx:id="studentNameLabel" styleClass="info-label"/>
                            <Label fx:id="studentIdLabel" styleClass="info-label"/>
                            <Label fx:id="studentCgpaLabel" styleClass="info-label"/>
                        </VBox>
                        
                        <VBox spacing="5">
                            <Label text="Statistics" styleClass="section-title"/>
                            <Label fx:id="totalCoursesLabel" styleClass="info-label"/>
                            <Label fx:id="averageGradeLabel" styleClass="info-label"/>
                            <Label fx:id="completedCreditsLabel" styleClass="info-label"/>
                        </VBox>
                    </HBox>
                    
                    <!-- Grade Filters -->
                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <Label text="Filters:" styleClass="filter-label"/>
                        
                        <ComboBox fx:id="courseFilter" promptText="All Courses" 
                                 prefWidth="200"/>
                        
                        <ComboBox fx:id="semesterFilter" promptText="All Semesters" 
                                 prefWidth="150"/>
                        
                        <CheckBox fx:id="publishedOnlyCheck" text="Published Only"/>
                        
                        <Region HBox.hgrow="ALWAYS"/>
                        
                        <Button text="Refresh" onAction="#handleRefresh" 
                               styleClass="action-button"/>
                        <Button text="Export Transcript" onAction="#handleExportTranscript" 
                               styleClass="primary-button"/>
                    </HBox>
                    
                    <!-- Grades Table -->
                    <TableView fx:id="gradesTable" styleClass="grades-table">
                        <columns>
                            <TableColumn text="Course" prefWidth="150"/>
                            <TableColumn text="Assignment" prefWidth="200"/>
                            <TableColumn text="Score" prefWidth="100"/>
                            <TableColumn text="Max Score" prefWidth="100"/>
                            <TableColumn text="Percentage" prefWidth="100"/>
                            <TableColumn text="Letter Grade" prefWidth="100"/>
                            <TableColumn text="Feedback" prefWidth="200"/>
                            <TableColumn text="Graded Date" prefWidth="150"/>
                            <TableColumn text="Published" prefWidth="100"/>
                        </columns>
                    </TableView>
                    
                    <!-- Grade Distribution Chart -->
                    <VBox spacing="10">
                        <Label text="Grade Distribution" styleClass="section-title"/>
                        <PieChart fx:id="gradeDistributionChart" 
                                 prefHeight="300" legendVisible="true"/>
                    </VBox>
                </VBox>
            </Tab>
            
            <!-- Teacher Grading Tab -->
            <Tab text="Grading" fx:id="gradingTab">
                <VBox spacing="20">
                    <padding><Insets all="20"/></padding>
                    
                    <!-- Course Selection -->
                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <Label text="Select Course:" styleClass="filter-label"/>
                        <ComboBox fx:id="gradingCourseFilter" prefWidth="300"/>
                        <Button text="Load Students" onAction="#handleLoadStudents" 
                               styleClass="primary-button"/>
                    </HBox>
                    
                    <!-- Students Grid -->
                    <VBox spacing="10">
                        <Label text="Students in Course" styleClass="section-title"/>
                        <TableView fx:id="studentsTable">
                            <columns>
                                <TableColumn text="Student ID" prefWidth="120"/>
                                <TableColumn text="Name" prefWidth="200"/>
                                <TableColumn text="Current Grade" prefWidth="100"/>
                                <TableColumn text="Assignments Submitted" prefWidth="150"/>
                                <TableColumn text="Actions" prefWidth="200"/>
                            </columns>
                        </TableView>
                    </VBox>
                    
                    <!-- Bulk Actions -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Bulk Actions:" styleClass="filter-label"/>
                        <Button text="Publish All Grades" onAction="#handlePublishAll" 
                               styleClass="action-button"/>
                        <Button text="Calculate Final Grades" onAction="#handleCalculateFinal" 
                               styleClass="primary-button"/>
                        <Button text="Generate Report" onAction="#handleGenerateReport" 
                               styleClass="action-button"/>
                    </HBox>
                </VBox>
            </Tab>
            
            <!-- Analytics Tab -->
            <Tab text="Analytics" fx:id="analyticsTab">
                <VBox spacing="20">
                    <padding><Insets all="20"/></padding>
                    
                    <!-- Course Performance Chart -->
                    <VBox spacing="10">
                        <Label text="Course Performance" styleClass="section-title"/>
                        <BarChart fx:id="coursePerformanceChart" 
                                 prefHeight="400" legendVisible="true"/>
                    </VBox>
                    
                    <!-- Statistics -->
                    <GridPane hgap="20" vgap="10">
                        <Label text="Overall Statistics" styleClass="section-title" 
                               GridPane.columnSpan="2"/>
                        
                        <Label text="Total Students:" GridPane.rowIndex="1" 
                               GridPane.columnIndex="0" styleClass="stat-label"/>
                        <Label fx:id="totalStudentsLabel" GridPane.rowIndex="1" 
                               GridPane.columnIndex="1" styleClass="stat-value"/>
                        
                        <Label text="Average CGPA:" GridPane.rowIndex="2" 
                               GridPane.columnIndex="0" styleClass="stat-label"/>
                        <Label fx:id="averageCgpaLabel" GridPane.rowIndex="2" 
                               GridPane.columnIndex="1" styleClass="stat-value"/>
                        
                        <Label text="Pass Rate:" GridPane.rowIndex="3" 
                               GridPane.columnIndex="0" styleClass="stat-label"/>
                        <Label fx:id="passRateLabel" GridPane.rowIndex="3" 
                               GridPane.columnIndex="1" styleClass="stat-value"/>
                        
                        <Label text="Top Performing Course:" GridPane.rowIndex="4" 
                               GridPane.columnIndex="0" styleClass="stat-label"/>
                        <Label fx:id="topCourseLabel" GridPane.rowIndex="4" 
                               GridPane.columnIndex="1" styleClass="stat-value"/>
                    </GridPane>
                </VBox>
            </Tab>
        </TabPane>
    </center>
</BorderPane>
