<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.2"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.arms.gui.controllers.LoginController"
           stylesheets="@../css/styles.css">
    <VBox spacing="15" alignment="CENTER" styleClass="login-container">
        <padding><Insets top="40" right="40" bottom="40" left="40"/></padding>
        <Label text="Academic Records Management System" styleClass="login-title"/>

        <HBox spacing="10" alignment="CENTER">
            <Label text="Continue as:" />
            <ComboBox fx:id="roleChoice" prefWidth="180" />
            <Button text="Sign up" onAction="#handleShowSignup" />
        </HBox>

        <GridPane hgap="10" vgap="10">
            <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="usernameField" promptText="Username" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <PasswordField fx:id="passwordField" promptText="Password" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <CheckBox fx:id="rememberMeCheck" text="Remember me" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>

        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="loginButton" text="Login" styleClass="primary-button"/>
            <Hyperlink fx:id="forgotPasswordLink" text="Forgot password?"/>
        </HBox>

        <StackPane fx:id="progressPane" visible="false">
            <ProgressIndicator fx:id="progressIndicator" progress="-1"/>
        </StackPane>
    </VBox>
</StackPane>

