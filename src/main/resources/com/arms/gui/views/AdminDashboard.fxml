<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.PieChart?>
<?import org.controlsfx.control.GridView?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.arms.gui.controllers.AdminController"
            stylesheets="@../css/dashboard.css">
    <top>
        <HBox styleClass="header" alignment="CENTER_LEFT" spacing="20">
            <padding><Insets top="10" right="20" bottom="10" left="20"/></padding>
            <Label text="Admin Dashboard" styleClass="header-title"/>
            <Region HBox.hgrow="ALWAYS"/>
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Label fx:id="adminIdLabel" styleClass="welcome-label"/>
                <Label fx:id="accessLevelLabel" styleClass="role-label"/>
                <Button text="Logout" onAction="#handleLogout" styleClass="logout-button"/>
            </HBox>
        </HBox>
    </top>

    <left>
        <VBox styleClass="sidebar" spacing="10">
            <padding><Insets top="20" right="15" bottom="20" left="15"/></padding>
            <VBox spacing="15" alignment="TOP_CENTER">
                <ImageView fx:id="profileImage" fitWidth="80" fitHeight="80" styleClass="profile-image"/>
                <Label text="Administrator" styleClass="role-label"/>
            </VBox>
            <Separator/>
            <VBox spacing="5">
                <Button text="Dashboard" onAction="#handleRefreshData" styleClass="sidebar-button" maxWidth="Infinity"/>
                <Button text="Users" onAction="#handleRefreshData" styleClass="sidebar-button" maxWidth="Infinity"/>
                <Button text="Courses" onAction="#handleRefreshData" styleClass="sidebar-button" maxWidth="Infinity"/>
                <Button text="Logs" onAction="#handleRefreshData" styleClass="sidebar-button" maxWidth="Infinity"/>
            </VBox>
        </VBox>
    </left>

    <center>
        <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE">
            <Tab fx:id="dashboardTab" text="Dashboard">
                <ScrollPane fitToWidth="true">
                    <VBox spacing="20" styleClass="dashboard-content">
                        <padding><Insets right="20" left = "20" bottom="20" top="20"/></padding>
                        <VBox spacing="10">
                            <Label text="Statistics" styleClass="section-title"/>
                            <HBox fx:id="statisticsContainer" spacing="15"/>
                        </VBox>

                        <HBox spacing="20">
                            <VBox spacing="10" prefWidth="600">
                                <Label text="Users" styleClass="section-title"/>
                                <GridView fx:id="usersGrid" cellWidth="220" cellHeight="140"/>
                            </VBox>
                           <VBox spacing="10" prefWidth="400">
                            <Label text="Recent Logs" styleClass="section-title"/>
                            <ListView fx:id="logsListView" prefHeight="400"/>
                           </VBox>
                        </HBox>
                    </VBox>
                </ScrollPane>
            </Tab>

            <Tab fx:id="usersTab" text="Users">
                <VBox spacing="10">
                    <padding><Insets right="20" left = "20" bottom="20" top="20"/></padding>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="All Users" styleClass="section-title"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Add User" onAction="#handleAddUser" styleClass="primary-button"/>
                        <Button text="Edit" onAction="#handleEditUser"/>
                        <Button text="Delete" onAction="#handleDeleteUser"/>
                    </HBox>
                    <GridView fx:id="usersGrid" cellWidth="220" cellHeight="140"/>
                </VBox>
            </Tab>

            <Tab fx:id="coursesTab" text="Courses">
                <VBox spacing="10">
                    <padding><Insets right="20" left = "20" bottom="20" top="20"/></padding>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Courses" styleClass="section-title"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Add Course" onAction="#handleAddCourse" styleClass="primary-button"/>
                        <Button text="Refresh" onAction="#handleRefreshData"/>
                    </HBox>
                    <GridView fx:id="coursesGrid" cellWidth="260" cellHeight="140"/>
                </VBox>
            </Tab>

            <Tab fx:id="logsTab" text="Logs">
                <VBox spacing="10">
                    <padding><Insets right="20" left = "20" bottom="20" top="20"/></padding>
                    <ListView fx:id="logsListView" prefHeight="400"/>
                </VBox>
            </Tab>
        </TabPane>
    </center>

    <bottom>
        <HBox styleClass="footer" alignment="CENTER" spacing="10">
            <padding><Insets right="5" left = "5" top = "5" bottom = "5" /></padding>
            <Label text="Academic Records Management System v1.0.0" styleClass="footer-text"/>
        </HBox>
    </bottom>

    <!-- Loading Overlay -->
    <StackPane fx:id="loadingOverlay" visible="false" styleClass="loading-overlay">
    <VBox alignment="CENTER" spacing="20">
        <ProgressIndicator fx:id="loadingIndicator" progress="-1"/>
        <Label text="Loading data..." styleClass="loading-text"/>
    </VBox>
</StackPane>
</BorderPane>
